@model FilteredSuppliersModel

@{
    ViewData["Title"] = "Filtered Suppliers";
}

<h2>Filtered Suppliers</h2>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Number of Parts
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model.Suppliers)
        {
            <tr>
                <td>
                    @supplier.Id
                </td>
                <td>
                    @supplier.Name
                </td>
                <td>
                    @supplier.NumberOfParts
                </td>
            </tr>
        }
    </tbody>
</table>

